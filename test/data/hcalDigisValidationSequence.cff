module HEDigisValidation = hcalDigiAnalyzer from
                                              "Validation/HcalDigis/test/data/HcalDigiParam.cfi"
replace HEDigisValidation.hcalselector = "HE"
replace HEDigisValidation.outputFile = "HcalDigisValidationHE.root" 

module HODigisValidation = hcalDigiAnalyzer from
                                              "Validation/HcalDigis/test/data/HcalDigiParam.cfi"
replace HODigisValidation.hcalselector = "HO"
replace HODigisValidation.outputFile = "HcalDigisValidationHO.root" 

module HFDigisValidation = hcalDigiAnalyzer from
                                              "Validation/HcalDigis/test/data/HcalDigiParam.cfi"
replace HFDigisValidation.hcalselector = "HF"
replace HFDigisValidation.outputFile = "HcalDigisValidationHF.root" 

sequence hcalDigisValidationSequence = { HBDigisValidation & HEDigisValidation & HODigisValidation & HFDigisValidation }
